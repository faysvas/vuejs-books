{
    "name": "vuejs-books",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "start": "vue-cli-service serve",
        "build": "vue-cli-service build",
        "lint": "vue-cli-service lint",
        "e2e-tests": "node_modules/.bin/cypress open",
        "cypress:ci": "cypress run --config video=false",
        "unit-tests": "jest"
    },
    "dependencies": {
        "axios": "^0.19.2",
        "bootstrap": "^4.5.0",
        "bootstrap-vue": "^2.15.0",
        "core-js": "^2.6.11",
        "vue": "^2.6.11",
        "vue-router": "^3.3.4"
    },
    "devDependencies": {
        "@vue/cli-plugin-babel": "^3.12.1",
        "@vue/cli-plugin-eslint": "^3.12.1",
        "@vue/cli-service": "^3.12.1",
        "@vue/test-utils": "^1.0.3",
        "babel-core": "^7.0.0-bridge.0",
        "babel-eslint": "^10.1.0",
        "babel-jest": "^24.9.0",
        "cypress": "^3.8.3",
        "eslint": "^5.16.0",
        "eslint-plugin-vue": "^5.0.0",
        "jest": "^24.9.0",
        "node-sass": "^4.14.1",
        "sass-loader": "^8.0.2",
        "vue-jest": "^3.0.5",
        "vue-template-compiler": "^2.6.11"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true
        },
        "extends": [
            "plugin:vue/essential",
            "eslint:recommended"
        ],
        "rules": {},
        "parserOptions": {
            "parser": "babel-eslint"
        }
    },
    "postcss": {
        "plugins": {
            "autoprefixer": {}
        }
    },
    "browserslist": [
        "> 1%",
        "last 2 versions"
    ],
    "jest": {
        "testRegex": "(/__tests__/.*|(\\.|/)(test))\\.[jt]sx?$",
        "moduleFileExtensions": [
            "js",
            "json",
            "vue"
        ],
        "transform": {
            ".*\\.(vue)$": "vue-jest",
            "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
        }
    }
}
